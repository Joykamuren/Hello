<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="FirstName"
            android:ems="10"
            android:id="@+id/tvFirstname"
            android:hint="FirstName"
            tools:layout_editor_absoluteY="24dp" tools:layout_editor_absoluteX="99dp"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="LastName"
            android:ems="10"
            android:id="@+id/tvLastName"
            android:hint="LastName" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFirstname"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/tvEmail"
            android:hint="Email" android:text="Email" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLastName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tvPassword"
            android:hint="Password" android:text="Password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tvConfirmPassword" android:hint="ConfirmPassword" android:text="ConfirmPassword"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tvPassword"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <Button
            android:text="SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvButton"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tvConfirmPassword"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>